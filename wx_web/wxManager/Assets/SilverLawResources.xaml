                                              DarkColor="#FF0A0A0A"
                                              Desaturation="0.3"
                                              ToneAmount="0" />
                        </Border.Effect>
                        <Grid Height="Auto"
                              Width="Auto">
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="80" />
                          </Grid.ColumnDefinitions>
                          <ContentControl Content="{TemplateBinding Title}"
                                          HorizontalAlignment="Stretch"
                                          IsTabStop="False"
                                          Margin="24,12,6,10"
                                          VerticalAlignment="Center"
                                          Foreground="#FFBDBDBD" />
                          <Button x:Name="CloseButton"
